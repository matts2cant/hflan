{% extends "::layout.html.twig" %}

{% set currentPage = 'blog' %}

{% block body %}
    <section>
        {% for key, flash in app.session.flashes %}
        <div class="alert alert-{{ key }}">
            {{ flash|trans }}
        </div>
        {% endfor %}

        <header>
            <h1>{% block sectionTitle %}{% trans %}blog.title.bundle{% endtrans %}{% endblock %}</h1>
        </header>
        {% block blog %}
        {% endblock %}
    </section>
{% endblock %}